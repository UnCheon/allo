<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_header_logo"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_noti"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </android.support.v4.view.ViewPager>
        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/cpi_noti"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="top"
            android:paddingTop="10dp" />


    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll_cash"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/selector_red_fill_btn"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/tag_white" />

        <TextView
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="무료 알로 이용권 : "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_cach"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />

        <TextView
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매"
            android:textColor="@color/white" />


        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/time_white" />

        <TextView
            android:textSize="13dp"
            android:id="@+id/tv_left_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white" />
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="시간 후 충전"-->
        <!--android:textColor="@color/white"/>-->

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="44dp"></LinearLayout>
</LinearLayout>