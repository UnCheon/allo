<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_info"
    android:layout_width="320dp"
    android:layout_height="75dp"
    android:gravity="center"
    android:background="@drawable/selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/iv_allo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/allo_logo" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:tag="wcisgood"
                android:text="벚꽃 엔딩"
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:singleLine="true"
                android:id="@+id/tv_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="버스커 버스커(Busker Busker)"
                android:textColor="#aaa"
                android:ellipsize="marquee"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_stop"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/selector_red_fill_btn"
                android:id="@+id/iv_stop" />
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/allo_red"
                android:text="정지"
                android:textSize="10dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
