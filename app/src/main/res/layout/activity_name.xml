<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000" android:padding="5dp">


    <LinearLayout
        android:background="@drawable/radius_white"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회원 가입"
                    android:textColor="#000"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:gravity="center_vertical|right"
                android:baselineAligned="false"
                android:paddingRight="15dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/allo_logo" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:id="@+id/textView2"
            android:background="#ccc" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="0dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/et_phone_number"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/grey_border" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용하실 이름을 입력해주세요."
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/et_name"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/grey_border" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="확인"
                android:id="@+id/btn_register"
                android:onClick="agreeBtn"
                android:textColor="#f91f30"
                android:textSize="15dp"
                android:background="@drawable/red_border_button"
                android:layout_marginTop="20dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
