<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_loading"
    android:layout_width="320dp"
    android:layout_height="75dp"
    android:background="@drawable/selector"
    android:orientation="horizontal">

    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/stat_red"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/tv_allo_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_centerInParent="true"
        android:ellipsize="marquee"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="now loading..."
        android:textColor="#666"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"

        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/allo_logo" />

</RelativeLayout><!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:id="@+id/ll_loading"--><!--android:layout_width="320dp"--><!--android:layout_height="75dp"--><!--android:background="@drawable/selector"--><!--android:orientation="horizontal"--><!--android:gravity="center">-->

