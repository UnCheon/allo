<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/radius_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_side_menu"
                    android:layout_marginLeft="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/selector_top_munu" />
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/allo_logo"/>

                <!--<TextView-->
                    <!--android:id="@+id/tv_title"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:text="home"-->
                    <!--android:textSize="20dp"-->
                    <!--android:textStyle="bold" />-->

            </LinearLayout>


            <LinearLayout
                android:id="@+id/addSongLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:paddingRight="7dp">

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="12dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:src="@drawable/selector_search" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#ccc" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <com.github.florent37.materialviewpager.MaterialViewPager
                android:id="@+id/materialViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f91f30"
                app:viewpager_animatedHeaderImage="true"
                app:viewpager_color="#000"
                app:viewpager_displayToolbarWhenSwipe="false"
                app:viewpager_enableToolbarElevation="false"
                app:viewpager_headerAdditionalHeight="0dp"
                app:viewpager_headerAlpha="1.0"
                app:viewpager_headerHeight="190dp"
                app:viewpager_hideLogoWithFade="true"
                app:viewpager_hideToolbarAndTitle="false"
                app:viewpager_logo="@layout/header_logo"
                app:viewpager_logoMarginTop="0dp"
                app:viewpager_parallaxHeaderFactor="1.5"
                app:viewpager_transparentToolbar="true" />


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
