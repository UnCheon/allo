<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_gravity="bottom">
    <LinearLayout
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="fill_parent">
        <ImageView

            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:id="@+id/iv_allo_main"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <SeekBar android:id="@+id/sb_seekBar"
            style="@style/seekBarStyle"
            android:layout_width="fill_parent"
            android:layout_height="21dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center"
            android:max="100"
            android:progress="0"
            android:secondaryProgress="0"
            android:progressDrawable="@drawable/progress_horizontal_custom"
            android:thumb="@drawable/seek_thumb_custom" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/tv_play_time"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:text="00:00"/>
                <TextView
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:text=" / "/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:text="00:00"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@color/allo_red"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_allo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/allo"/>
                


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:text="Oasis (feat.ZICO)"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_artist"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:text="CURSH (크러쉬)"
                    android:textColor="#ccc"
                    android:textSize="13dp"
                    android:textStyle="bold"/>
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_play_pause"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                >

                <ImageView
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:clickable="true"
                    android:id="@+id/iv_play_pause"
                    android:padding="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/selector_play"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:background="#fff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/red_border_button"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/tv_content"
                android:textSize="15dp"
                android:text="asdfasdf"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_uploader"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ccc"
                android:textSize="13sp"
                android:text="Created by "/>

        </LinearLayout>
        <!--<LinearLayout-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="30dp"-->
            <!--android:gravity="center_vertical"-->
            <!--android:id="@+id/ll_check_basic">-->
            <!--<ImageView-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:id="@+id/iv_check_basic"-->
                <!--android:src="@drawable/check_red_fill"/>-->
            <!--<TextView-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="기본 알로로 설정하기"/>-->
        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/btn_purchase"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:background="@drawable/selector_red_fill_btn"
                android:textColor="@color/white"
                android:text="구매하기"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btn_gift"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:background="@drawable/selector_red_border_btn"
                android:textColor="@color/allo_red"
                android:textSize="15dp"
                android:text="선물하기"/>
        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>