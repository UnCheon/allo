<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000" android:padding="5dp">

    <LinearLayout
        android:background="@drawable/radius_white"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp">

                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/backBtn"
                    android:onClick="backBtn"
                    android:background="@drawable/back_btn" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알로 추가"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/nameTV"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:baselineAligned="false"
                android:paddingRight="15dp">

                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:id="@+id/storeBtn"
                    android:background="@drawable/store_btn_1" />
                <ImageButton
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:id="@+id/uploadBtn"
                    android:background="@drawable/upload_btn_2" />
                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:id="@+id/recordBtn"
                    android:background="@drawable/record_btn_2" />
            </LinearLayout>




        </LinearLayout>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#ccc" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <android.support.v4.view.ViewPager
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/pager"></android.support.v4.view.ViewPager>
`        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
