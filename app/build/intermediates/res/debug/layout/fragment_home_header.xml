<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_my_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myNameTV"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="#999"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="내 알로"
                android:textColor="#fff"
                android:textSize="10dp" />

            <LinearLayout
                android:id="@+id/mySongPlayLayout"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:background="@drawable/selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_my_allo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/allo_logo" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mySongTV"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="현재 설정된 알로가 없습니다."
                            android:textColor="#000"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/mySongArtistTV"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="unknown"
                            android:textColor="#aaa"
                            android:textSize="11dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_more"
                        android:layout_width="60dp"
                        android:layout_height="fill_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/moreBtn"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/etc_btn_1" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#ccc" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_allo_info"
                android:layout_width="fill_parent"
                android:layout_height="90dp"></android.support.v4.view.ViewPager>

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/cpi_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingTop="10dp" />
        </FrameLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#ccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_store_first"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom_red"
                android:gravity="center"
                android:text="인기 차트"
                android:textColor="#f91e2f"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_store_second"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center"
                android:text="최신 앨범"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_store_third"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center"
                android:text="음악 검색"
                android:textColor="#000"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#ccc" />
    </LinearLayout>
</LinearLayout>
