<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000" android:padding="5dp">


    <LinearLayout
        android:background="@drawable/radius_white"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp">

                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/backBtn"
                    android:background="@drawable/back_btn" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알로 추가"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/nameTV"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:baselineAligned="false"
                android:paddingRight="15dp">

                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:id="@+id/storeBtn"
                    android:background="@drawable/store_btn_1" />
                <ImageButton
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:id="@+id/uploadBtn"
                    android:background="@drawable/upload_btn_2" />
                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:id="@+id/recordBtn"
                    android:background="@drawable/record_btn_2" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#ccc" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/storeLayout"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/uploadLayout"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ScrollView
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <!-- listview item start -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:padding="10dp">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:id="@+id/fileIV"
                                    android:background="@drawable/music_1"
                                    android:layout_marginLeft="8dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="12dp"
                                    android:textColor="#000"
                                    android:text="cloudsky.mp3"
                                    android:id="@+id/fileTV" />
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_vertical|right"
                                android:paddingRight="20dp"
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="9">

                                <ImageButton
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:id="@+id/selectSongPlayBtn"
                                    android:background="@drawable/play_btn" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:background="#ccc" />
                        <!-- listview item end -->
                        <ListView
                            android:id="@+id/uploadLv"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                        </ListView>
                    </LinearLayout>
                </ScrollView>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:background="#f91f30"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:id="@+id/imageView"
                                android:layout_marginLeft="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="12dp"
                                android:textColor="#eee"
                                android:text="The blower&apos;s daughter - Damien Rice"
                                android:id="@+id/playSongTV" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center_vertical|right"
                            android:paddingRight="15dp"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="5">

                            <ImageButton
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:id="@+id/playSongPlayBtn"
                                android:background="@drawable/pause_white_btn" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/recordLayout"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <!--<com.skd.androidrecording.visualizer.VisualizerView-->
                        <!--android:id="@+id/visualizerView"-->
                        <!--android:layout_width="fill_parent"-->
                        <!--android:layout_height="fill_parent" >-->
                    <!--</com.skd.androidrecording.visualizer.VisualizerView>-->
                </LinearLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#ccc" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="70dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="45dp"
                        android:background="@drawable/red_border_circle"
                        android:padding="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="45dp">
                        <ImageButton
                            android:layout_gravity="center"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:id="@+id/playBtn"
                            android:textColor="#f91f30"
                            android:textSize="15dp"
                            android:background="@drawable/play_btn" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="70dp"
                        android:background="@drawable/red_border_circle"
                        android:padding="10dp"
                        android:layout_height="70dp">
                        <ImageButton
                            android:layout_gravity="center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/recordingBtn"
                            android:textColor="#f91f30"
                            android:textSize="15dp"
                            android:background="@drawable/record" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
