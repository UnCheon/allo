<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000" android:padding="5dp">


    <LinearLayout
        android:background="@drawable/radius_white"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp">

                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/backBtn"
                    android:background="@drawable/back_btn" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구간 선택"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/nameTV"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:baselineAligned="false"
                android:paddingRight="15dp">

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/confirmBtn"
                    android:background="@drawable/confirm_btn" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#ccc" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="0dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/allo_logo"
                        android:id="@+id/songIV" />

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="점심의 제왕 - 정주원"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:textSize="13dp"
                        android:id="@+id/songTitleTV" />

                    <TextView
                        android:gravity="right"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="03:11"
                        android:textColor="#aaa"
                        android:textSize="11dp"
                        android:layout_weight="4"
                        android:id="@+id/songLengthTV" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#ccc" />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:background="@drawable/red_border_circle"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp">
                <ImageButton
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="확인"
                    android:id="@+id/playBtn"
                    android:textColor="#f91f30"
                    android:textSize="15dp"
                    android:background="@drawable/play_btn" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
