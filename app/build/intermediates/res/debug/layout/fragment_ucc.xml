<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.allo.UCCFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/menu_50"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/iv_side_menu"/>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나만의 알로 만들기"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:id="@+id/nameTV"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="나만의 알로 만들기"
                    android:textSize="40sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="녹음이나 mp3파일 업로드를 통해 직접 나만의 알로를 만들어 보세요. 친구에게 선물하는 것도 가능합니다.
                    *나만의 알로만들기는 이용권이 필요하지 않습니다. "/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="시작하기"
                    android:id="@+id/btn_start_ucc"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
