<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000" android:padding="5dp">

    <LinearLayout
        android:background="@drawable/radius_white"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/back_btn"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_back"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My allo"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/nameTV"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:baselineAligned="false"
                android:paddingRight="15dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/allo_logo" />

            </LinearLayout>




        </LinearLayout>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#ccc" />
        <LinearLayout
            android:id="@+id/storeLayout"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fff">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff">

                <TextView
                    android:background="@drawable/border_bottom_red"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#f91e2f"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="기본 알로"
                    android:id="@+id/tv_first" />

                <TextView
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:background="#fff"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="시간대 알로"
                    android:id="@+id/tv_second" />

                <TextView
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:background="#fff"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="친구별 알로"
                    android:id="@+id/tv_third" />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_question"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout><!-- From: file:/Users/baek_uncheon/AndroidStudioProjects/allo/app/src/main/res/layout/activity_question.xml -->