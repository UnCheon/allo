<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:id="@+id/fInfoLayout"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:paddingLeft="15dp"
                android:textColor="#111"
                android:layout_weight="1"
                android:id="@+id/tv_nickname"
                android:text="김은영" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="#999"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="15dp"
                android:id="@+id/tv_phone_number"
                android:text="010-1234-5678" />
        </LinearLayout>
        <TextView
            android:layout_gravity="right"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#ccc"/>

        <LinearLayout
            android:background="@drawable/grey_border_flat"
            android:layout_width="fill_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                >
                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/iv_allo"
                    android:background="@drawable/allo_logo"

                    android:layout_marginLeft="8dp" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:textColor="#000"
                        android:text="현재 설정된 알로가 없습니다."
                        android:id="@+id/tv_title" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:textColor="#aaa"
                        android:text="unknown"
                        android:id="@+id/tv_artist" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:id="@+id/myInfoLayout">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/moreBtn" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout><!-- From: file:/Users/baek_uncheon/AndroidStudioProjects/allo/app/src/main/res/layout/layout_friend_allo_item_2.xml -->