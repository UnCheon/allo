<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000" android:padding="5dp">

<LinearLayout
    android:background="@drawable/radius_white"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/menu_50"
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_side_menu"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알로 스토어"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/nameTV"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:baselineAligned="false"
            android:paddingRight="15dp">
            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="유료"
                android:id="@+id/btn_charged"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="무료"
                android:id="@+id/btn_free"/>

        </LinearLayout>




    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ccc" />
    <LinearLayout
        android:id="@+id/storeLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            >

            <TextView
                android:background="@drawable/border_bottom_red"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#f91e2f"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="인기 차트"
                android:id="@+id/popularBtn" />

            <TextView
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#000"
                android:background="#fff"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="최신 앨범"
                android:id="@+id/newBtn" />

            <TextView
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#000"
                android:background="#fff"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="음악 검색"
                android:id="@+id/searchBtn" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp"
            android:layout_weight="1"
            android:id="@+id/frameLayout"
            android:background="#fff">
            <!--<ListView-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="fill_parent"-->
                <!--android:visibility="visible"-->
                <!--android:id="@+id/newLv"-->
                <!--android:focusable="false"-->
                <!--android:focusableInTouchMode="false"></ListView>-->

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="visible"
                android:id="@+id/rankLv"
                ></ListView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/searchLayout"
                android:visibility="gone">
                <LinearLayout
                    android:layout_margin="15dp"
                    android:background="@drawable/grey_border"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:layout_height="60dp">

                    <EditText
                        android:background="#fff"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/searchET" />

                    <ImageButton
                        android:layout_marginRight="10dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/search_btn_1"
                        android:id="@+id/moreBtn" />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#f91f30"
            android:visibility="gone"
            android:id="@+id/playSongLayout"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/imageView"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="12dp"
                        android:textColor="#eee"
                        android:text="재생할 곡을 선택하세요."
                        android:id="@+id/playSongTV" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical|right"
                    android:paddingRight="15dp"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5">

                    <ImageButton
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:id="@+id/playSongPlayBtn"
                        android:background="@drawable/play_white_btn"
                        android:layout_marginRight="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

</RelativeLayout><!-- From: file:/Users/baek_uncheon/AndroidStudioProjects/allo/app/src/main/res/layout/fragment_store.xml -->