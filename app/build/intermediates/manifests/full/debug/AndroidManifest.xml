<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.allo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PRECISE_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />

    <permission
        android:name="com.allo.gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.allo.gcm.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <receiver android:name="com.allo.OutCallBroadcasting" >
            <intent-filter>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.allo.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="kr.mint.testgcm" />
            </intent-filter>
        </receiver>

        <service android:name="com.allo.GcmIntentService" />
        <service
            android:name="com.allo.BackgroundService"
            android:hardwareAccelerated="false" />

        <activity
            android:name="com.allo.IntroActivity"
            android:label="알로" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.allo.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.allo.AgreeActivity"
            android:label="@string/title_activity_agree" >
        </activity>
        <activity
            android:name="com.allo.MainActivity"
            android:label="MainActivity" >
        </activity>
        <activity
            android:name="com.allo.RegisterActivity"
            android:label="@string/title_activity_name" >
        </activity>
        <activity
            android:name="com.allo.MyAlloFragment"
            android:label="MyAlloActivity" >
        </activity>
        <activity
            android:name="com.allo.AddAlloFragmentActivity"
            android:label="@string/title_fragment_activity_add_allo" >
        </activity>
        <activity
            android:name="com.allo.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.allo.RecordActivity"
            android:label="@string/title_activity_record" >
        </activity>
        <activity
            android:name="com.allo.UploadActivity"
            android:label="@string/title_activity_upload" >
        </activity>
        <activity
            android:name="com.allo.ByChangeActivity"
            android:label="ByChangeActivity" >
        </activity>
        <activity
            android:name="com.allo.ChangeAlloActivity"
            android:label="@string/title_activity_change_allo" >
        </activity>
        <activity
            android:name="com.allo.QuestionFragmentActivity"
            android:label="QuestionFragmentActivity" >
        </activity>
        <activity
            android:name="com.allo.FriendListActivity"
            android:label="FriendListActivity" >
        </activity>
    </application>

</manifest>